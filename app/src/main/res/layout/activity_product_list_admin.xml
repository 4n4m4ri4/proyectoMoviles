<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativePorductsAdmin"
    tools:context=".ProductListAdmin">

    <ListView
        android:id="@+id/listViewProductsAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/primaryDarkColor"
        android:src="@drawable/nuevo"
        app:fabSize="normal"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textoVistaVaciaAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="4dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textScaleX="1.0"
        android:visibility="invisible"
        android:lineSpacingExtra="5dp"
        android:text="No hay productos aÃ±adidos. Pulse la cajita para introducir uno nuevo."/>

</RelativeLayout>