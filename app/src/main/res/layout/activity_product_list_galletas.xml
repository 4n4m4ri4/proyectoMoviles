<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativeListGalletas"
    android:layout_height="match_parent"
    tools:context=".ProductListGalletas">

    <ListView
        android:id="@+id/listViewProductsGalletas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonCarritoGalleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/primaryDarkColor"
        android:src="@drawable/carrito"
        app:fabSize="auto"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/textoVistaVaciaGalleta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="4dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textScaleX="1.0"
        android:visibility="invisible"
        android:lineSpacingExtra="5dp"
        android:text="La lista está vacía."/>

</RelativeLayout>