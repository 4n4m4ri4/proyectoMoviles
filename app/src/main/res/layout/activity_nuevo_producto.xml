<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollNuevoProd"
    android:layout_height="match_parent"
    tools:context=".NuevoProducto">


    <LinearLayout
        android:id="@+id/linearPrincipalProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F2F8"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/relativeNuevoProd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            
            <TextView
                android:id="@+id/textoAddPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce datos"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/editCategoriaAddPro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textoAddPro"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/primaryDarkColor"
                android:gravity="center"
                android:hint="Categoria"
                android:inputType="text"
                android:maxLength="30"
                android:minHeight="48dp" />


            <EditText
                android:id="@+id/editNombreAddPro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editCategoriaAddPro"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/primaryDarkColor"
                android:gravity="center"
                android:hint="Nombre"
                android:inputType="text"
                android:maxLength="40"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/editPrecioAddPro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editNombreAddPro"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/primaryDarkColor"
                android:gravity="center"
                android:hint="Precio"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />
            <TextView
                android:id="@+id/textoPrecioAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/editPrecioAddPro"
                android:layout_below="@+id/editNombreAddPro"
                android:textSize="18sp"
                android:text="â‚¬"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/botonAltaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="guardar"/>


    </LinearLayout>

</ScrollView>